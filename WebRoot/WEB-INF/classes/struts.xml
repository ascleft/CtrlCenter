		<action name="CustomShopDesign"         class="com.ltyx.sca.action.CustomShopUserPBYXDesignAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/CSU_PBYX_Design.jsp</result>
		</action>
		<action name="GetPriceCustomShopDesign" class="com.ltyx.sca.action.CustomShopUserPBYXDesignAction" method="getPrice"></action>
