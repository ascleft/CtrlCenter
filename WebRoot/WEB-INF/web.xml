<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name></display-name>

	<!-- 项目默认页 -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- 404友好访问 -->
	<error-page>
		<error-code>404</error-code>
		<location>/html/404.jsp</location>
	</error-page>

	<!-- session超时定义,单位为分钟 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>



	<!-- 测试模块 -->
	<!-- 参数测试Servlet -->
	<servlet>
		<servlet-name>ParamTestServlet</servlet-name>
		<servlet-class>com.ltyx.test.servlet.ParamTestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ParamTestServlet</servlet-name>
		<url-pattern>/ParamTestServlet</url-pattern>
	</servlet-mapping>

	<!-- 过滤器 -->
	<!-- LTYX基础过滤器 -->
	<filter>
		<filter-name>MainHttpFilter</filter-name>
		<filter-class>com.ltyx.filter.LTYXMainHttpFilter</filter-class>
		<init-param>
			<param-name>count</param-name>
			<param-value>10000</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>MainHttpFilter</filter-name>
		<url-pattern>/Disable/*</url-pattern>
	</filter-mapping>

	<!-- LTYX衬衫收集系统 登录验证 过滤器 -->
	<filter>
		<filter-name>LTYXTailorUser</filter-name>
		<filter-class>com.ltyx.tailor.filter.LTYXTailorFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LTYXTailorUser</filter-name>
		<url-pattern>/LTYX/Tailor/TailorForm/*</url-pattern>
	</filter-mapping>

	<!-- struts2过滤器 -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>

</web-app>
