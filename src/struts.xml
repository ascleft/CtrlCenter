<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!--系统核心 -->
	<package name="SystemCore" namespace="/Core" extends="struts-default">
		<default-action-ref name="User"></default-action-ref>

		<!--首页 -->
		<action name="Main" class="com.ltyx.core.action.MainAction"
		method="getPage">
			<result name="succ">/html/index.jsp</result>
		</action>

		<!--OpenAPI -->
		<action name="OpenApiList" class="com.ltyx.core.action.MainAction"
		method="getPage">
			<result name="succ">/html/ZC/OpenApiListForm.jsp</result>
		</action>

	</package>

	<!--衬衫下单工具 1.0 登录模块 -->
	<package name="TailorLoginAction" namespace="/LTYX/Tailor"
	extends="struts-default">
		<default-action-ref name="User"></default-action-ref>

		<!--注销接口 -->
		<action name="Logout" class="com.ltyx.tailor.action.LoginAction"
		method="logout">
			<result name="succ">/html/TailorInfo/Login.jsp</result>
		</action>

		<!--获取登录页面 -->
		<action name="LoginPage" class="com.ltyx.tailor.action.LoginAction"
		method="loginPage">
			<result name="succ">/html/TailorInfo/Login.jsp</result>
		</action>

		<!--登录接口 -->
		<action name="Login" class="com.ltyx.tailor.action.LoginAction"
		method="login"></action>

	</package>

	<!--衬衫下单工具 1.0 下单模块 -->
	<package name="TailorFormAction" namespace="/LTYX/Tailor/TailorForm"
	extends="struts-default">
		<default-action-ref name="User"></default-action-ref>

		<!-- 获取订单信息表单 专业版 -->
		<action name="Pro" class="com.ltyx.tailor.action.GetTailorFormAction"
		method="getForm">
			<result name="succ">/html/TailorInfo/FormTailorPro.jsp</result>
		</action>

		<!-- 获取订单信息表单 客供版 -->
		<action name="ProPBC" class="com.ltyx.tailor.action.GetTailorFormAction"
		method="getFormWithCode">
			<result name="succ">/html/TailorInfo/FormTailorProPBC.jsp</result>
		</action>

		<!-- 获取订单信息表单 设计师款 -->
		<action name="Design" class="com.ltyx.tailor.action.GetTailorFormAction"
		method="getForm">
			<result name="succ">/html/TailorInfo/FormTailorDesign.jsp</result>
		</action>

		<!-- 获取订单信息表单 定制顾问 -->
		<action name="Advisor" class="com.ltyx.tailor.action.GetTailorFormAction"
		method="getForm">
			<result name="succ">/html/TailorInfo/FormTailorAdvisor.jsp</result>
		</action>

		<!-- 提交成衬衫订单 -->
		<action name="SubmitTailorForm" class="com.ltyx.tailor.action.SubmitTailorFormAction"
		method="submit"></action>

		<!-- 系统设置 获取页面 -->
		<action name="GetSettingPage" class="com.ltyx.tailor.action.SettingAction"
		method="getPage">
			<result name="succ">/html/TailorInfo/Setting.jsp</result>
		</action>

		<!-- 系统设置 当前服务器状态 -->
		<action name="GetState" class="com.ltyx.tailor.action.SettingAction"
		method="getState"></action>

		<!-- 系统设置 更新系统设置 -->
		<action name="Setting" class="com.ltyx.tailor.action.SettingAction"
		method="setting"></action>

		<!-- 平台商品 获取页面 -->
		<action name="GetPlatformTailorPage" class="com.ltyx.tailor.action.PlatformTailor"
		method="getPage">
			<result name="succ">/html/TailorInfo/PlatformTailor.jsp</result>
		</action>

		<!-- 平台商品 更新列表 -->
		<action name="UpdatePlatformTailorPage" class="com.ltyx.tailor.action.PlatformTailor"
		method="updateList"></action>

		<!-- 平台商品 即时库存 -->
		<action name="GetPlatformTailorRTInventory" class="com.ltyx.tailor.action.PlatformTailor"
		method="RTInventory"></action>

		<!-- 平台商品 提交下单 -->
		<action name="SubmitPlatformTailor" class="com.ltyx.tailor.action.PlatformTailor"
		method="submitTailor"></action>

	</package>

	<!--衬衫下单工具SCA 2.0 登录模块 -->
	<package name="ShoppingCartAssistant" namespace="/LTYX/SCA"
	extends="struts-default">
		<default-action-ref name="User"></default-action-ref>

		<!-- 获取页面 登录页面-->
		<action name="LoginPage" class="com.ltyx.sca.action.LoginAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/Login.jsp</result>
		</action>
		<!-- 获取页面 登出页面-->
		<action name="Logout" class="com.ltyx.sca.action.LoginAction" method="logout">
			<result name="succ">/html/ShoppingCartAssistant/Login.jsp</result>
		</action>

		<!-- 数据接口 登录 -->
		<action name="Login" class="com.ltyx.sca.action.LoginAction" method="login"></action>

	</package>

	<!--衬衫下单工具SCA 2.0 下单模块 -->
	<package name="ShoppingCartAssistantMain" namespace="/LTYX/SCA/Main"
	extends="struts-default">
		<default-action-ref name="User"></default-action-ref>

		<!-- 定制顾问  -->

		<!-- 定制顾问  衬衫  -->
		<action name="AidePBYX" class="com.ltyx.sca.action.AidePBYXAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/AidePBYX.jsp</result>
		</action>
		<action name="GetPriceAidePBYX" class="com.ltyx.sca.action.AidePBYXAction" method="getPrice"></action>
		<action name="SubmitAidePBYX" class="com.ltyx.sca.action.AidePBYXAction" method="submit"></action>

		<!-- 定制顾问 设计师款 -->
		<action name="AideDesign" class="com.ltyx.sca.action.AideDesignAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/AideDesign.jsp</result>
		</action>
		<action name="GetPriceAideDesign" class="com.ltyx.sca.action.AideDesignAction" method="getPrice"></action>
		<action name="SubmitAideDesign" class="com.ltyx.sca.action.AideDesignAction" method="submit"></action>

		<!-- 定制顾问 女装 -->
		<action name="AideWoman" class="com.ltyx.sca.action.AideWomanAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/AideWoman.jsp</result>
		</action>
		<action name="GetPriceAideWoman" class="com.ltyx.sca.action.AideWomanAction" method="getPrice"></action>
		<action name="SubmitAideWoman" class="com.ltyx.sca.action.AideWomanAction" method="submit"></action>

		<!-- 定制顾问 其他商品 -->
		<action name="AideSubcontract" class="com.ltyx.sca.action.AideSubcontractAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/AideSubcontract.jsp</result>
		</action>
		<action name="GetPriceAideSubcontract" class="com.ltyx.sca.action.AideSubcontractAction" method="getPrice"></action>
		<action name="SubmitAideSubcontract" class="com.ltyx.sca.action.AideSubcontractAction" method="submit"></action>

		<!-- 获取页面 即时库存 定制顾问 -->
		<action name="AideSearch" class="com.ltyx.sca.action.SearchAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/AideSearch.jsp</result>
		</action>

		<!-- 客户经理-->

		<!-- 客户经理 优纤面料-->
		<action name="CustomShopAidePBYX" class="com.ltyx.sca.action.CustomShopAidePBYXAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/CustomShopAidePBYX.jsp</result>
		</action>
		<action name="GetPriceCustomShopAidePBYX" class="com.ltyx.sca.action.CustomShopAidePBYXAction" method="getPrice"></action>
		<action name="SubmitCustomShopAidePBYX" class="com.ltyx.sca.action.CustomShopAidePBYXAction" method="submit"></action>

		<!-- 客户经理 客供面料-->
		<action name="CustomShopAidePBC" class="com.ltyx.sca.action.CustomShopAidePBCAction" method="getFormWithCode">
			<result name="succ">/html/ShoppingCartAssistant/CustomShopAidePBC.jsp</result>
		</action>
		<action name="GetPriceCustomShopAidePBC" class="com.ltyx.sca.action.CustomShopAidePBCAction" method="getPrice"></action>
		<action name="SubmitCustomShopAidePBC" class="com.ltyx.sca.action.CustomShopAidePBCAction" method="submit"></action>

		<!-- 客户经理 女装-->
		<action name="CustomShopAideWoman" class="com.ltyx.sca.action.CustomShopAideWomanAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/CustomShopAideWoman.jsp</result>
		</action>
		<action name="GetPriceCustomShopAideWoman" class="com.ltyx.sca.action.CustomShopAideWomanAction" method="getPrice"></action>
		<action name="SubmitCustomShopAideWoman" class="com.ltyx.sca.action.CustomShopAideWomanAction" method="submit"></action>

		<!-- 客户经理 即时库存  -->
		<action name="CustomShopAideSearch" class="com.ltyx.sca.action.SearchAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/CustomShopAideSearch.jsp</result>
		</action>

		<!-- 定制店  -->

		<!-- 定制店  优纤面料-->
		<action name="CustomShopPBYX" class="com.ltyx.sca.action.CustomShopPBYXAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/CustomShopPBYX.jsp</result>
		</action>
		<action name="GetPriceCustomShopPBYX" class="com.ltyx.sca.action.CustomShopPBYXAction" method="getPrice"></action>
		<action name="SubmitCustomShopPBYX" class="com.ltyx.sca.action.CustomShopPBYXAction" method="submit"></action>

		<!-- 定制店  客供面料-->
		<action name="CustomShopPBC" class="com.ltyx.sca.action.CustomShopPBCAction" method="getFormWithCode">
			<result name="succ">/html/ShoppingCartAssistant/CustomShopPBC.jsp</result>
		</action>
		<action name="GetPriceCustomShopPBC" class="com.ltyx.sca.action.CustomShopPBCAction" method="getPrice"></action>
		<action name="SubmitCustomShopPBC" class="com.ltyx.sca.action.CustomShopPBCAction" method="submit"></action>

		<!-- 定制店  女装-->
		<action name="CustomShopWoman" class="com.ltyx.sca.action.CustomShopWomanAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/CustomShopWoman.jsp</result>
		</action>
		<action name="GetPriceCustomShopWoman" class="com.ltyx.sca.action.CustomShopWomanAction" method="getPrice"></action>
		<action name="SubmitCustomShopWoman" class="com.ltyx.sca.action.CustomShopWomanAction" method="submit"></action>

		<!-- 获取页面 即时库存 定制店 -->
		<action name="CustomShopSearch" class="com.ltyx.sca.action.SearchAction" method="getPage">
			<result name="succ">/html/ShoppingCartAssistant/CustomShopSearch.jsp</result>
		</action>

	</package>

	<!--衬衫下单工具 即时库存模块 -->
	<package name="UcsAction" namespace="/UcsPlus" extends="struts-default">

		<!-- 即时库存 获取搜索页 -->
		<action name="GetSearchPage" class="com.ltyx.ucsplus.action.SearchAction"
		method="getPage">
			<result name="succ">/html/TailorInfo/Search.jsp</result>
		</action>

		<!-- 即时库存 搜索 -->
		<action name="Search" class="com.ltyx.ucsplus.action.SearchAction"
		method="search"></action>

	</package>

	<!--衬衫下单工具 订单查询模块 -->
	<package name="LTYXTailorListAction" namespace="/LTYX/Tailor/List"
	extends="struts-default">

		<!-- 获取列表查询页 -->
		<action name="GetListPage" class="com.ltyx.tailor.action.GetListAction"
		method="getPage">
			<result name="succ">/html/TailorInfo/OrderList.jsp</result>
		</action>

		<!-- 获取总页数 -->
		<action name="GetPageCount" class="com.ltyx.tailor.action.GetListAction"
		method="getPageCount"></action>

		<!-- 查询 -->
		<action name="GetList" class="com.ltyx.tailor.action.GetListAction"
		method="getList"></action>

	</package>

	<!--鲁泰优纤 衬衫下单工具 对外接口 -->
	<package name="OpenAPI" namespace="/LTYX/OpenAPI" extends="struts-default">

		<!-- 衬衫订单 提交成衬衫订单 -->
		<action name="SubmitTailorForm" class="com.ltyx.tailor.action.SubmitTailorFormAction"
		method="submit"></action>

		<!-- 通用工具 接口连通性测试 获取页面 -->
		<action name="GetInterfaceTestPage" class="com.ltyx.ucsplus.action.InterfaceTestAction"
		method="getPage">
			<result name="succ">/html/ZC/ActiveForm.jsp</result>
		</action>

		<!-- 通用工具 接口连通性测试 -->
		<action name="InterfaceTest" class="com.ltyx.ucsplus.action.InterfaceTestAction"
		method="test"></action>

		<!-- 通用工具 上行参数测试 -->
		<action name="ShowParam" class="com.ltyx.ucsplus.action.ParamTestAction"
		method="showParam"></action>

	</package>

	<!--鲁泰优纤 模拟接口 -->
	<package name="Simulator" namespace="/LTYX/Simulator" extends="struts-default">
		<default-action-ref name="User"></default-action-ref>

		<!-- 模拟ec登录接口 -->
		<action name="LoginEC" class="com.ltyx.tailor.action.SimulatorAction"
		method="login"></action>
		<!-- 模拟ec提交接口 -->
		<action name="SubTailorEC" class="com.ltyx.tailor.action.SimulatorAction"
		method="addCart"></action>

		<!-- 模拟 获取动态表单页面 -->
		<action name="GetActionFormPage" class="com.ltyx.tailor.action.SimulatorAction"
		method="getPageActionFormPage">
			<result name="succ">/html/ZC/ActiveMeasureForm.jsp</result>
		</action>

		<!-- 模拟 获取动态表单 -->
		<action name="GetActionForm" class="com.ltyx.tailor.action.SimulatorAction"
		method="getPageActionForm"></action>

	</package>

	<!--附加 小程序 -->
	<package name="TalkAction" namespace="/Talk" extends="struts-default">

		<!-- 聊天 获取页面 -->
		<action name="GetTalkPage" class="com.zc.fun.talk.TalkAction"
		method="getPage">
			<result name="succ">/html/Talk/Talk.jsp</result>
		</action>

		<!-- 聊天 提交对话 -->
		<action name="Talk" class="com.zc.fun.talk.TalkAction" method="talk"></action>

		<!-- 随机短语 获取页面 -->
		<action name="GetRandomWordPage" class="com.zc.fun.talk.WordAction"
		method="getPage">
			<result name="succ">/html/Talk/Word.jsp</result>
		</action>

		<!-- 随机短语 获取随机短语 -->
		<action name="GetRandomWord" class="com.zc.fun.talk.WordAction"
		method="randomWord"></action>

	</package>

</struts>
